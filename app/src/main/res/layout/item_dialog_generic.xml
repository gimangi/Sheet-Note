<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dialogText"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@drawable/rectangle_fill_white_12">

        <TextView
            android:id="@+id/tv_dialog_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dialogText}"
            tools:text="다이얼로그 내용"
            android:fontFamily="@font/noto_sans_kr"
            android:textFontWeight="400"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="17dp"
            android:layout_marginHorizontal="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <android.widget.Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:text="@string/dialog_cancel"
            android:textColor="@color/gray2"
            android:fontFamily="@font/noto_sans_kr"
            android:textFontWeight="400"
            android:includeFontPadding="false"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_dialog_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_detail" />

        <android.widget.Button
            android:id="@+id/btn_dialog_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/dialog_delete"
            android:textColor="@color/red"
            android:fontFamily="@font/noto_sans_kr"
            android:textFontWeight="400"
            android:includeFontPadding="false"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_dialog_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_dialog_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
